{
  "manifest_version": 3,
  "name": "Mukana to mimoLive Sync",
  "version": "2.0.1",
  "description": "Real-time synchronization tool that automatically extracts panelist comments from Mukana pages and forwards them to mimoLive via HTTP API endpoints. Features DOM monitoring, automatic data extraction, and seamless mimoLive integration.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Mukana to mimoLive Sync"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*mukana-panelView*", "*://*/*mukana-panel*", "*://*/*mukana-panelist*", "*://*/*mukana-teleprompter*"],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "author": "Ronny Hofs√∏y, Media Event AS",
  "short_name": "Mukana Sync",
  "minimum_chrome_version": "88",
  "offline_enabled": false
}
